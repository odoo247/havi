<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_task_form2_extend" model="ir.ui.view">
        <field name="name">View Task Extends</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group/group[2]/field[2]" position="after">
                <field name="remain_hour_support" widget="float_time"/>
            </xpath>
        </field>
    </record>
    <record id="edit_project_extend" model="ir.ui.view">
        <field name="name">project.project.edit</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/notebook[1]/page[1]/group[1]/field[4]" position="after">
                <field name="hour_support" widget="float_time"/>
                <field name="percent"/>
                <field name="remaining_hour"/>
            </xpath>
        </field>
    </record>
</odoo>