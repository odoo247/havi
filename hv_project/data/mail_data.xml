<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="email_template_project_project_remind_first" model="mail.template">
            <field name="name">Projects: Send by email</field>
            <field name="model_id" ref="hv_project.model_project_project"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Reminder</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Remaining time of ${object.name} is very low</p>
                </div>
            </field>
        </record>
    <record id="email_template_project_project_remind_second" model="mail.template">
            <field name="name">Projects: Send by email</field>
            <field name="model_id" ref="hv_project.model_project_project"/>
            <field name="email_from">${object.user_id.email_formatted |safe}</field>
            <field name="partner_to">${object.partner_id.id}</field>
            <field name="subject">Notice</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Time of ${object.name} is over</p>
                </div>
            </field>
        </record>
</odoo>

